  <SpellDef InternalName="DrainLife">
    <DisplayName>Drain Life</DisplayName>
    <Description>Transfers 12 hit points (+2 per death shard) from target enemy to the caster.  That damage is halved if the enemy resists. All damage is halved again if target counts as Not Alive.</Description>
    <FormattedDescription>Transfers %d hit points from target enemy to the caster.  That damage is halved if the enemy resists. Damage is halved again if target counts as Not Alive.</FormattedDescription>
    <Image>T_DrainLife_Painting.png</Image>
    <IconFG>T_DrainLife_Icon.png</IconFG>
    <AutoUnlock>1</AutoUnlock>
    <CastTime>1</CastTime>
    <SpellBookSortCategory>Unit</SpellBookSortCategory>
    <SpellBookSortSubCategory>UnitDamage</SpellBookSortSubCategory>
    <SpellType>Tactical</SpellType>
    <SpellClass>Offensive</SpellClass>
    <SpellSubClass>Damage</SpellSubClass>
    <SpellTargetType>EnemyUnit</SpellTargetType>
    <IsResistable>1</IsResistable>
    <SpellTypeDrain>1</SpellTypeDrain>
    <Prereq>
      <Type>AbilityBonusOption</Type>
      <Attribute>Death3</Attribute>
    </Prereq>
    <GameModifier>
      <ModType>Unit</ModType>
      <Attribute>Lifesteal</Attribute>
      <IsForFormattedDescription>1</IsForFormattedDescription>
      <Calculate InternalName="Calc" ValueOwner="CastingUnit">
        <Expression><![CDATA[[UnitOwner_GetNumDeathShards] * 2]]></Expression>
      </Calculate>
      <Calculate InternalName="Calc2">
        <Expression><![CDATA[[Calc] + 12]]></Expression>
      </Calculate>
      <Calculate InternalName="OwnerShards" ValueOwner="CastingUnit">
        <Expression><![CDATA[[UnitOwner_GetNumDeathShards]]]></Expression>
      </Calculate>
      <Calculate InternalName="CalcX" ValueOwner="TargetUnit">
        <Expression><![CDATA[[OwnerShards] * [UnitStat_BG_IsNotAlive]]]></Expression>
      </Calculate>
      <Calculate InternalName="CalcX1">
        <Expression><![CDATA[[CalcX] * 2]]></Expression>
      </Calculate>
      <Calculate InternalName="CalcY" ValueOwner="TargetUnit">
        <Expression><![CDATA[6 * [UnitStat_BG_IsNotAlive]]]></Expression>
      </Calculate>
      <Calculate InternalName="CalcZ">
        <Expression><![CDATA[[CalcX1] + [CalcY]]]></Expression>
      </Calculate>
      <Calculate InternalName="Value">
        <Expression><![CDATA[[Calc2] - [CalcZ]]]></Expression>
      </Calculate>
      <Calculate InternalName="ValueForFormattedDescription">
        <Expression><![CDATA[[Calc] + 12]]></Expression>
      </Calculate>
    </GameModifier>
    <GameModifier>
      <ModType>Unit</ModType>
      <Attribute>Lifesteal</Attribute>
      <IsForSpellResist>1</IsForSpellResist>
      <Calculate InternalName="Calc" ValueOwner="CastingUnit">
        <Expression><![CDATA[[UnitOwner_GetNumDeathShards]]]></Expression>
      </Calculate>
      <Calculate InternalName="OwnerShards" ValueOwner="CastingUnit">
        <Expression><![CDATA[[UnitOwner_GetNumDeathShards]]]></Expression>
      </Calculate>
      <Calculate InternalName="CalcX" ValueOwner="TargetUnit">
        <Expression><![CDATA[[OwnerShards] * [UnitStat_BG_IsNotAlive]]]></Expression>
      </Calculate>
      <Calculate InternalName="CalcY" ValueOwner="TargetUnit">
        <Expression><![CDATA[3 * [UnitStat_BG_IsNotAlive]]]></Expression>
      </Calculate>
      <Calculate InternalName="CalcZ">
        <Expression><![CDATA[[CalcX] + [CalcY]]]></Expression>
      </Calculate>
      <Calculate InternalName="Calc2">
        <Expression><![CDATA[[Calc] + 6]]></Expression>
      </Calculate>
      <Calculate InternalName="Value">
        <Expression><![CDATA[[Calc2] - [CalcZ]]]></Expression>
      </Calculate>
    </GameModifier>
    <ValueCalcWrapper>
      <ValueType>IsTargetWorthy</ValueType>
      <Calculate InternalName="Calc" ValueOwner="TargetUnit">
        <Expression><![CDATA[[UnitStat_BG_IsNotAlive]]]></Expression>
      </Calculate>
      <Calculate InternalName="Value">
        <Expression><![CDATA[[Calc] < 1]]></Expression>
      </Calculate>
    </ValueCalcWrapper>
