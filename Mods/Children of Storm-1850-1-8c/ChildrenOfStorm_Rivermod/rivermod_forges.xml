  <ImprovementType InternalName="rivermod_magmaforge">
    <Prereq>
      <Type>RestrictedAbilityBonusOption</Type>
      <Attribute>Rivermod_blockmagmaforge</Attribute>
      <Target>Player</Target>
    </Prereq>
    <Prereq>
      <Type>Tech</Type>
      <Attribute>Construction</Attribute>
    </Prereq>
