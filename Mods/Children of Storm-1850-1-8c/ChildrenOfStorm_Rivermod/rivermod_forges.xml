    <Description>Allows you to cast the Magma Forge spell</Description>
    <RequiresCity>1</RequiresCity>
    <PreferredTerrain>Magmariver</PreferredTerrain>
    <LaborToBuild>200</LaborToBuild>
    <GameModifier>
      <ModType>Resource</ModType>
      <Attribute>MagmaForge</Attribute>
      <Value>1</Value>
      <PerTurn>1</PerTurn>
      <Provides>+1 Magma Forge</Provides>
    </GameModifier>
    <IgnoreDuplicateImpLimit>1</IgnoreDuplicateImpLimit>
    <RequiresResource>1</RequiresResource>
    <SupportedResourceType>Magmatube</SupportedResourceType>
    <AIData AIPersonality="AI_General">
      <AITag>Materials</AITag>
    </AIData>
    <ArtDef>Art_Magmaforge</ArtDef>
  </ImprovementType>
  <ImprovementTypeArtDef InternalName="Art_Magmaforge">
