        <Attribute>AdjustUnitStat</Attribute>
        <StrVal>UnitStat_Accuracy</StrVal>
        <StrVal2>ExpandedTraits_FLAG_DefendingCityWithLumberMill</StrVal2>
        <Provides>.</Provides>
        <Value>20</Value>
        <vsHigher>1</vsHigher>
      </GameModifier>
      <GameModifier>
        <ModType>Unit</ModType>
        <Attribute>AdjustUnitStat</Attribute>
        <StrVal>UnitStat_Attack_Cutting</StrVal>
        <StrVal2>ExpandedTraits_FLAG_DefendingCityWithLumberMill</StrVal2>
        <Provides>.</Provides>
        <Multiplier>1.20</Multiplier>
