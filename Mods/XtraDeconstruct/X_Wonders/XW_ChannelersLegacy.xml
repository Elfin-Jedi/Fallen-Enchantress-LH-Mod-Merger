<ImprovementTypes>
	<ImprovementType InternalName="Imp_X_ChannelersLegacy_W">
		<DisplayName>Channeler's Legacy</DisplayName>
		<Prereq>
			<Type>Tech</Type>
			<Attribute>Immortal_Codex</Attribute>
		</Prereq>
		<Description>Sets Essence at 4.
		Subsequent essence modifying improvements can increase this number.
		
		+1 Fame per Season
		-1% Unrest
		-2% Unrest in all your cities
		
		Faction Wonder.</Description>
		<AllowedPerFaction>1</AllowedPerFaction>
		<RequiresCity>1</RequiresCity>
		<PreferredTerrain>River</PreferredTerrain>
		<PreferredTerrain>River</PreferredTerrain>
		<PreferredTerrain>City</PreferredTerrain>
		<PreferredTerrain>Category:Land</PreferredTerrain>
		<RequiresCityImprovement>1</RequiresCityImprovement>
		<RequiredImprovement>Conclave</RequiredImprovement>
		<LaborToBuild>1756</LaborToBuild>
		<HideInHiergamenon>0</HideInHiergamenon>
		<GameModifier>
			<ModType>Resource</ModType>
			<Attribute>TileYieldEssence</Attribute>
			<PerTurn>1</PerTurn>
			<Provides>Sets Essence at 4</Provides>
			<Calculate InternalName="Calc" ValueOwner="OwnerCity">
				<Expression><![CDATA[4 - [TileYieldEssence]]]></Expression>
			</Calculate>
			<Calculate InternalName="Value">
				<Expression><![CDATA[[Calc]]]></Expression>
			</Calculate>
		</GameModifier>
		<GameModifier>
			<ModType>Resource</ModType>
			<Attribute>Fame</Attribute>
			<Value>1</Value>
			<PerTurn>1</PerTurn>
			<Provides>+1 Fame per Season</Provides>
		</GameModifier>
		<GameModifier>
			<ModType>Resource</ModType>
			<Attribute>Unrest</Attribute>
			<Value>-1</Value>
			<PerTurn>1</PerTurn>
			<Provides>-1% Unrest</Provides>
		</GameModifier>
		<GameModifier>
			<ModType>Player</ModType>
			<Attribute>AbilityBonus</Attribute>
			<StrVal>A_Additive_Unrest</StrVal>
			<Value>-2</Value>
			<Provides>-2% Unrest in all your cities</Provides>
		</GameModifier>
		<AIData AIPersonality="AI_General">
			<AIPriority>911</AIPriority>
			<AITag>Arcane</AITag>
		</AIData>
		<ArtDef>ArtDef_X_ChannelersLegacy_Wonder</ArtDef>
	</ImprovementType>
</ImprovementTypes>
