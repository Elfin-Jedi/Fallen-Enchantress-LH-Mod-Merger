  <!-- **************************************************** -->
  <!-- Higher Standards -->
  <!-- **************************************************** -->
  <AbilityBonus InternalName="Higher_Standards_Ability">
    <AbilityBonusType>Player</AbilityBonusType>
    <AbilityBonusOption InternalName="Higher_Standards">
      <DisplayName>Higher Standards</DisplayName>
      <Description>Faction can cast the Repatriation spell. They also receive a +20% bonus to gold production, get more food and production in their cities, but suffer -50% Growth penalty.</Description>
      <Icon>Ability_Higher_Standards_Icon.png</Icon>
      <GameModifier>
        <ModType>Player</ModType>
        <Attribute>UnlockSpell</Attribute>
        <StrVal>Nervari_Repatriation</StrVal>
        <Provides>Unlocks Repatriation, a spell that grants +2 Growth in the enchanted city at the cost of 10% Unrest.</Provides>
      </GameModifier>
      <GameModifier>
        <ModType>Player</ModType>
        <Attribute>AbilityBonus</Attribute>
        <StrVal>A_Gold</StrVal>
        <Value>15</Value>
        <Provides>The faction gets +20% Gildar income</Provides>
      </GameModifier>
      <GameModifier>
        <ModType>Player</ModType>
        <Attribute>AbilityBonus</Attribute>
        <StrVal>A_Additive_ProductionPerMaterials</StrVal>
        <Value>1</Value>
        <Provides>The faction gets +1 Production per Material in all cities</Provides>
      </GameModifier>
      <GameModifier>
        <ModType>Player</ModType>
        <Attribute>AbilityBonus</Attribute>
        <StrVal>A_Additive_FoodPerGrain</StrVal>
        <Value>10</Value>
        <Provides>The faction gets +10 Food per Grain in all cities</Provides>
      </GameModifier>
      <GameModifier>
        <ModType>Player</ModType>
        <Attribute>AbilityBonus</Attribute>
        <StrVal>A_Prestige</StrVal>
        <Value>-50</Value>
        <Provides>The faction suffers -50% Growth in all cities</Provides>
      </GameModifier>
      <Cost>1</Cost>
      <Type>Army</Type>
      <AIData AIPersonality="AI_General">
        <AIPriority>5</AIPriority>
      </AIData>
    </AbilityBonusOption>
  </AbilityBonus>
  <!-- **************************************************** -->
  <!-- Warrior Training -->
  <!-- Inspiration: "WarriorCasteAbility" -->
  <!-- **************************************************** -->
  <AbilityBonus InternalName="Warrior_Training_Ability">
    <AbilityBonusType>Player</AbilityBonusType>
    <AbilityBonusOption InternalName="Warrior_Training">
      <DisplayName>Warrior Training</DisplayName>
      <Description>This faction can construct the Training Pits and the Martial Library improvements. Trained units can get Elite perk.</Description>
      <Icon>Ability_WarMachine_Icon.png</Icon>
      <GameModifier>
        <Provides>Unlocks the Martial Library, an improvement that provides +5% research, reduces training costs by 15% and grants trained units +1 starting level and +5 Defense</Provides>
      </GameModifier>
      <GameModifier>
        <Provides>Unlocks the Training Pits, an improvement that grants trained units the Gladiator ability (+2 Initiative, +5% Physical Resistance and +20% Armor Piercing), provides XP for stationed units and champions, but reduces Growth by 25%</Provides>
      </GameModifier>
      <GameModifier>
        <Provides>Allows to train Elite units</Provides>
      </GameModifier>
      <Cost>1</Cost>
      <Type>Army</Type>
      <AIData AIPersonality="AI_General">
        <AIPriority>5</AIPriority>
      </AIData>
    </AbilityBonusOption>
  </AbilityBonus>
