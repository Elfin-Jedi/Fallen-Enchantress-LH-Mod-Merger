  <!-- Martial Library -->
  <!-- **************************************************** -->
  <ImprovementType InternalName="Martial_Library">
    <DisplayName>Martial Library</DisplayName>
    <Description>Martial Libraries reduce training costs by 15%, provide +5% research and grants trained units +1 starting level and +5 Defense.</Description>
    <RequiresCity>1</RequiresCity>
    <BarredTerrain>River</BarredTerrain>
    <BarredTerrain>SwampTerrain</BarredTerrain>
    <PreferredTerrain>City</PreferredTerrain>
    <PreferredTerrain>Category:Land</PreferredTerrain>
    <PreferredTerrain>Forest</PreferredTerrain>
    <RequiresCityImprovement>1</RequiresCityImprovement>
    <RequiredImprovement>Conclave</RequiredImprovement>
    <EncloseInCityWalls>1</EncloseInCityWalls>
    <LaborToBuild>200</LaborToBuild>
    <Prereq>
      <Type>AbilityBonusOption</Type>
      <Attribute>Warrior_Training</Attribute>
      <Target>Player</Target>
    </Prereq>
    <GameModifier>
      <ModType>City</ModType>
      <Attribute>TrainingDiscount</Attribute>
      <Value>0.15</Value>
      <Provides>-15% Unit Training cost</Provides>
    </GameModifier>
    <GameModifier>
      <ModType>ResourceMultiplier</ModType>
      <Attribute>Research</Attribute>
      <Value>1.05</Value>
      <PerTurn>1</PerTurn>
      <Provides>+5% Research</Provides>
    </GameModifier>
    <GameModifier>
      <ModType>CityTrainingBonus</ModType>
      <Attribute>TrainingBonus_LevelUpUnit</Attribute>
      <Value>1</Value>
      <Provides>+1 Level for Trained Units</Provides>
    </GameModifier>
    <GameModifier>
      <ModType>CityTrainingBonus</ModType>
      <Attribute>TrainingBonus_ApplyUnitModifier_Add</Attribute>
      <StrVal>UnitStat_Defense_Pierce</StrVal>
      <Value>5</Value>
