  <!-- Swamp Fertilizer Pit -->
  <!-- Inspiration: "Docks"; requires a swamp tile adjacent directly to the city walls -->
  <!-- **************************************************** -->
  <ImprovementType InternalName="Swamp_Fertilizer_Pit">
    <DisplayName>Swamp Fertilizer Pit</DisplayName>
    <Description>Swamp Fertilizer Pits increases the amount of Food in cities that they are built in.</Description>
    <RequiresCity>1</RequiresCity>
    <BarredTerrain>River</BarredTerrain>
    <BarredTerrain>Forest</BarredTerrain>
    <PreferredTerrain>SwampTerrain</PreferredTerrain>
    <EncloseInCityWalls>0</EncloseInCityWalls>
    <LaborToBuild>128</LaborToBuild>
    <Prereq>
      <Type>Tech</Type>
      <Attribute>Agriculture</Attribute>
    </Prereq>
    <GameModifier>
      <ModType>Resource</ModType>
      <Attribute>FoodPerGrain</Attribute>
      <Value>5</Value>
      <PerTurn>1</PerTurn>
      <Provides>+5 Food per Grain</Provides>
    </GameModifier>
    <AIData AIPersonality="AI_General">
      <AIPriority>10</AIPriority>
      <AITag>Economy</AITag>
    </AIData>
    <ArtDef>Art_Fertilizer_Pit</ArtDef>
    <ImprovementTypeArtDef InternalName="Art_Fertilizer_Pit">
      <ImprovementTypeArtSubPack InternalName="Art_Fertilizer_Pit_Kingdom">
        <SupportedBuildingStyle>KingdomStyle</SupportedBuildingStyle>
        <TileDesign>K_Swamp_Fertilizer_Pit_01</TileDesign>
        <ConstructionTileDesign>A_Swamp_Fertilizer_Pit_Build_01</ConstructionTileDesign>
        <DrawnIcon>Improvement_Swamp_Fertilizer_Pit.png</DrawnIcon>
        <DrawnIconConstruction>Improvement_Swamp_Fertilizer_Pit_C.png</DrawnIconConstruction>
        <Thumbnail>K_Swamp_Fertilizer_Pit_Thumb_01.png</Thumbnail>
        <Medallions InternalName="">
          <All>K_Swamp_Fertilizer_Pit_Thumb_01.png</All>
        </Medallions>
      </ImprovementTypeArtSubPack>
      <ImprovementTypeArtSubPack InternalName="Art_Fertilizer_Pit_Empire">
        <SupportedBuildingStyle>KingdomStyle</SupportedBuildingStyle>
        <TileDesign>F_Swamp_Fertilizer_Pit_01</TileDesign>
        <ConstructionTileDesign>A_Swamp_Fertilizer_Pit_Build_01</ConstructionTileDesign>
        <DrawnIcon>Improvement_Swamp_Fertilizer_Pit.png</DrawnIcon>
        <DrawnIconConstruction>Improvement_Swamp_Fertilizer_Pit_C.png</DrawnIconConstruction>
        <Thumbnail>F_Swamp_Fertilizer_Pit_Thumb_01.png</Thumbnail>
        <Medallions InternalName="">
          <All>F_Swamp_Fertilizer_Pit_Thumb_01.png</All>
        </Medallions>
      </ImprovementTypeArtSubPack>
    </ImprovementTypeArtDef>
  </ImprovementType>
