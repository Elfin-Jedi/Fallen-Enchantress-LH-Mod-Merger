  <!-- **************************************************** -->
  <!-- Fighting Pits -->
  <!-- **************************************************** -->
  <ImprovementType InternalName="Fighting_Pits">
    <DisplayName>Fighting Pits</DisplayName>
    <Description>Fighting Pits reflect a brutal ideology, according to which a citizen should fight hard to prove his usefulness to society. The trials unite, and the warriors trained here will be truly exceptional. Grants trained units the Gladiator ability (+2 Initiative, +5% Physical Resistance and +20% Armor Piercing) and provides XP for stationed units and champions.</Description>
    <RequiresCity>1</RequiresCity>
    <BarredTerrain>River</BarredTerrain>
    <BarredTerrain>SwampTerrain</BarredTerrain>
    <PreferredTerrain>City</PreferredTerrain>
    <PreferredTerrain>Category:Land</PreferredTerrain>
    <PreferredTerrain>Forest</PreferredTerrain>
    <EncloseInCityWalls>1</EncloseInCityWalls>
    <LaborToBuild>150</LaborToBuild>
    <Prereq>
      <Type>AbilityBonusOption</Type>
      <Attribute>Warrior_Training</Attribute>
      <Target>Player</Target>
    </Prereq>
    <GameModifier>
      <ModType>ResourceMultiplier</ModType>
      <Attribute>Prestige</Attribute>
      <Value>0.75</Value>
      <Provides>-25% Growth in this city</Provides>
    </GameModifier>
    <GameModifier>
      <ModType>StationedUnitStatBonus</ModType>
      <StrVal>UnitStat_Experience</StrVal>
      <StrVal2>OnlyTrainedUnits</StrVal2>
      <Value>1</Value>
      <BonusValue>100</BonusValue>
      <Provides>+1 XP per season for stationed Trained Units</Provides>
    </GameModifier>
    <GameModifier>
      <ModType>StationedUnitStatBonus</ModType>
      <StrVal>UnitStat_Experience</StrVal>
      <StrVal2>OnlyChampions</StrVal2>
      <Value>5</Value>
      <Operator>25</Operator>
      <Provides>+5 XP per season for stationed Champions</Provides>
    </GameModifier>
    <GameModifier>
      <ModType>CityTrainingBonus</ModType>
      <Attribute>TrainingBonus_ApplyAbilityBonus</Attribute>
      <StrVal>Gladiator_Fighter</StrVal>
      <Provides>Grants trained units the Gladiator ability (+2 Initiative, +5% Physical Resistance and +20% Armor Piercing)</Provides>
    </GameModifier>
    <AIData AIPersonality="AI_General">
      <AIPriority>200</AIPriority>
      <AITag>CommandPost</AITag>
      <AIAtWarMultiplier>2</AIAtWarMultiplier>
    </AIData>
    <ArtDef>Fighting_Pits_ArtDef</ArtDef>
    <ImprovementTypeArtDef InternalName="Fighting_Pits_ArtDef">
      <ImprovementTypeArtSubPack InternalName="Art_Fighting_Pits_Kingdom">
        <SupportedBuildingStyle>KingdomStyle</SupportedBuildingStyle>
        <TileDesign>K_Fighting_Pit_01</TileDesign>
        <ConstructionTileDesign>K_Construction1x1_01</ConstructionTileDesign>
        <DrawnIcon>Improvement_SacrificialAltar.png</DrawnIcon>
        <DrawnIconConstruction>Improvement_SacrificialAltar_C.png</DrawnIconConstruction>
        <Thumbnail>F_Sacrificial_Alter_Thumb_01.png</Thumbnail>
        <Medallions InternalName="">
          <All>F_Sacrificial_Alter_Thumb_01.png</All>
        </Medallions>
      </ImprovementTypeArtSubPack>
      <ImprovementTypeArtSubPack InternalName="Art_Fighting_Pits_Empire">
        <SupportedBuildingStyle>EmpireStyle</SupportedBuildingStyle>
        <TileDesign>F_Fighting_Pit_01</TileDesign>
        <ConstructionTileDesign>F_Construction1x1_01</ConstructionTileDesign>
        <DrawnIcon>Improvement_SacrificialAltar.png</DrawnIcon>
        <DrawnIconConstruction>Improvement_SacrificialAltar_C.png</DrawnIconConstruction>
        <Thumbnail>F_Sacrificial_Alter_Thumb_01.png</Thumbnail>
        <Medallions InternalName="">
          <All>F_Sacrificial_Alter_Thumb_01.png</All>
        </Medallions>
      </ImprovementTypeArtSubPack>
    </ImprovementTypeArtDef>
  </ImprovementType>
