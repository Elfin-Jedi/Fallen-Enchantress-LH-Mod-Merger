    <BarredTerrain>River</BarredTerrain>
    <BarredTerrain>Forest</BarredTerrain>
    <PreferredTerrain>SwampTerrain</PreferredTerrain>
    <EncloseInCityWalls>0</EncloseInCityWalls>
    <LaborToBuild>128</LaborToBuild>
    <GameModifier>
      <ModType>CityTrainingBonus</ModType>
      <Attribute>TrainingBonus_ApplyUnitModifier_Add</Attribute>
      <StrVal>UnitStat_Attack_Poison</StrVal>
      <Value>1</Value>
      <Provides>+1 Poison Attack to trained troops in city</Provides>
