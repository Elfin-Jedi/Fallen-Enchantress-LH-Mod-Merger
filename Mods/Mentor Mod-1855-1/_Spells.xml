<!-- This is a mod file to be used with shrill mod merger -->
<Spells>
   
   <SpellDef InternalName="Mentor_TeachAir">
        <DisplayName>Teach: Air magic</DisplayName>
        <Description>Allows the targeted Champion to learn air magic.</Description>
        <Image>T_DestinysInsight_Painting.png</Image>
        <IconFG>S_Revelation_Icon.png</IconFG>
        <IconBG>T_DrainLife_Icon_BG.png</IconBG>
        <IconColor>20,20,20</IconColor>
        <SpellBookSortCategory>Unit</SpellBookSortCategory>
        <SpellBookSortSubCategory>UnitEnchantment</SpellBookSortSubCategory>
        <SpellType>Strategic</SpellType>
        <SpellClass>Defensive</SpellClass>
        <SpellSubClass>Buff</SpellSubClass>
        <SpellTargetType>FriendlyChampionOrSov</SpellTargetType>
        <AutoUnlock>1</AutoUnlock>
        <Prereq>
            <Type>AbilityBonusOption</Type>
            <Attribute>Mentor</Attribute>
        </Prereq>
        <Prereq>
            <Type>AbilityBonusOption</Type>
            <Attribute>Air2</Attribute>
        </Prereq>
        <GameModifier>
            <ModType>Unit</ModType>
            <Attribute>UnlockUnitAbility</Attribute>
            <StrVal>Air1</StrVal>
            <Provides>Grants the Air Apprentice ability.</Provides>
        </GameModifier>
        <SpellResourceCost>
            <Resource>DiplomaticCapital</Resource>
            <Amount>100</Amount>
        </SpellResourceCost>
        <AIData AIPersonality="AI_General">
            <AIPriority>5</AIPriority>
        </AIData>
        <HitSoundFX>Spell_MantleOfFire_01</HitSoundFX>
        <SpellDefEffect>
            <EffectName>S_MantleofFire_Particle</EffectName>
            <LocalPosition>0,0,0</LocalPosition>
            <EffectScale>1</EffectScale>
            <EffectDelay>0</EffectDelay>
            <SnapToTerrain>1</SnapToTerrain>
        </SpellDefEffect>
    </SpellDef>

